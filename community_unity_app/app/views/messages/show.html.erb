<h2><%= @message.title %></h2>
<p>Created By <%= @message.user.email %> <%= time_ago_in_words(@message.created_at) %></p>
<p><%= @message.description %></p>

<h3>Comments:</h3>
<%= render @message.comments %>


<h3>Reply to Message</h3>
<%= render 'comments/form' %>

<%= link_to "Home", root_path %>
<%= link_to "Edit",edit_message_path(@message) %>
<%= link_to "Delete",message_path(@message), method: :delete, data: { confirm: "Are you sure, this can't be undone"} %>
